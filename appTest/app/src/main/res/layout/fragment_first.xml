<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#00FFFFFF"
    tools:context=".ui.fragments.main.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edSearchName"
            android:layout_width="328dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/corner_view"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="11.67dp"
            android:hint="@string/search"
            android:inputType="textCapSentences"
            android:maxLength="10"
            android:paddingLeft="16.83dp"
            android:textColor="@color/color_text_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="189.5dp"
            android:background="@drawable/corner_view"
            android:gravity="center"
            android:paddingLeft="46dp"
            android:paddingTop="65.5dp"
            android:paddingRight="46dp"
            android:paddingBottom="65.5dp"
            android:text="@string/info_text"
            android:textColor="@color/color_text_name"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/edSearchName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edSearchName"
            app:layout_constraintTop_toBottomOf="@+id/edSearchName" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/circle_view"
            android:gravity="center"
            android:text="@string/age_number"
            android:textSize="50sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edSearchName" />

        <TextView
            android:id="@+id/tvAddFavorite"
            android:layout_width="247dp"
            android:layout_height="55dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/corner_view_green"
            android:backgroundTint="@color/color_button"
            android:gravity="center"
            android:text="@string/add_favourite"
            android:textAllCaps="false"
            android:textColor="@color/color_favorite"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/corner_view_green"
            android:src="@drawable/ic_share"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tvAddFavorite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintStart_toEndOf="@+id/tvAddFavorite"
            app:layout_constraintTop_toTopOf="@+id/tvAddFavorite"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>